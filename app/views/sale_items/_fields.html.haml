%tr.nested-fields
  = f.simple_fields_for :product_attributes do |product|
    %td= product.input :name, input_html: { rel: 'autocomplete', 'data-source' => products_path(format: :json) }, label: false
    %td= product.input :price, readonly: true, label: false

  %td= f.input :quantity, label: false, input_html: { 'data-format' => '0' }
  %td= f.input :discount, label: false
  %td= f.input :total, readonly: true, label: false, input_html: { 'data-formula' => "$#{ tag_id(f, :quantity) } * $#{ tag_id f, :product_attributes, :price }" }
  %td= link_to_remove_association 'remove', f